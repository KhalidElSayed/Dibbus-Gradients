<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#161616"
    android:orientation="vertical"
    android:padding="10dp">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button1"
                style="@style/ButtonText"
                android:background="@drawable/btn_black"
                android:text="@string/btn_label_android" />

            <Button
                android:id="@+id/button2"
                style="@style/ButtonText"
                android:background="@drawable/btn_blue_matte"
                android:text="@string/btn_label_android" />

            <Button
                android:id="@+id/button3"
                style="@style/ButtonText"
                android:background="@drawable/btn_green_matte"
                android:text="@string/btn_label_android" />

            <Button
                android:id="@+id/button4"
                style="@style/ButtonText"
                android:background="@drawable/btn_orange_matte"
                android:text="@string/btn_label_android" />

            <Button
                android:id="@+id/button5"
                style="@style/ButtonText"
                android:background="@drawable/btn_pink_matte"
                android:text="@string/btn_label_android" />

            <Button
                android:id="@+id/button6"
                style="@style/ButtonText"
                android:background="@drawable/btn_red_matte"
                android:text="@string/btn_label_android" />

            <Button
                android:id="@+id/button6"
                style="@style/ButtonText"
                android:background="@drawable/btn_white_matte"
                android:text="@string/btn_label_android" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>